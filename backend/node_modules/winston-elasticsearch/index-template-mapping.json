{
  "priority": 200,
  "template": {
    "settings": {
      "index": {
        "mapping": {
          "total_fields": {
            "limit": "3000"
          }
        },
        "refresh_interval": "5s",
        "number_of_shards": "1",
        "number_of_replicas": "0"
      }
    },
    "mappings": {
      "_source": {
        "enabled": true
      },
      "properties": {
        "severity": {
          "index": true,
          "type": "keyword"
        },
        "source": {
          "index": true,
          "type": "keyword"
        },
        "@timestamp": {
          "type": "date"
        },
        "@version": {
          "type": "keyword"
        },
        "fields": {
          "dynamic": true,
          "type": "object"
        },
        "message": {
          "index": true,
          "type": "text"
        }
      }
    }
  },
  "index_patterns": [
    "logs-app-default*"
  ],
  "data_stream": {},
  "composed_of": []
}
