# ===========================================
# PetPro Backend Microservices Environment Variables Template
# Copy this file to .env and update values for your environment
# ===========================================

# Environment
NODE_ENV=development
LOG_LEVEL=debug

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=postgres

# Database Names (per service)
DB_NAME_AUTH=petpro_auth_dev
DB_NAME_BOOKING=petpro_booking_dev
DB_NAME_INVENTORY=petpro_product_dev
DB_NAME_ADMIN=petpro_admin_dev

# Redis Configuration (Optional - for caching & pub/sub)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT Configuration
JWT_SECRET=change_this_in_production_minimum_32_characters
JWT_EXPIRATION=86400
JWT_REFRESH_SECRET=change_this_refresh_secret_in_production_minimum_32_characters
JWT_REFRESH_EXPIRATION=604800

# Service URLs (for inter-service communication)
AUTH_SERVICE_URL=http://localhost:3001
BOOKING_SERVICE_URL=http://localhost:3002
INVENTORY_SERVICE_URL=http://localhost:3003
ADMIN_SERVICE_URL=http://localhost:3005

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:3010

# Frontend URLs
ADMIN_FRONTEND_URL=http://localhost:3010
CUSTOMER_FRONTEND_URL=http://localhost:3000

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-password

# External APIs (Optional)
GOOGLE_MAPS_API_KEY=your_google_maps_api_key
STRIPE_SECRET_KEY=sk_test_your_stripe_key