# Admin Gateway Environment Configuration
NODE_ENV=development
PORT=3004
LOG_LEVEL=debug

# JWT Configuration
JWT_SECRET=change_this_in_production_minimum_32_characters
JWT_EXPIRATION=86400

# Service URLs
ADMIN_SERVICE_URL=http://localhost:3005
AUTH_SERVICE_URL=http://localhost:3001
BOOKING_SERVICE_URL=http://localhost:3002
INVENTORY_SERVICE_URL=http://localhost:3003
VENDOR_SERVICE_URL=http://localhost:3006

# Redis Configuration (Optional)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# CORS Configuration
CORS_ORIGIN=http://localhost:3010

# Frontend URL
ADMIN_FRONTEND_URL=http://localhost:3010

# Rate Limiting
RATE_LIMIT_MAX_REQUESTS=1000
RATE_LIMIT_WINDOW_MS=900000