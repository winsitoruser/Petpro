# PetPro Production Environment Variables

# Environment
NODE_ENV=production

# Backend API
API_PORT=8080
API_HOST=0.0.0.0
API_URL=https://api.petpro.com
CORS_ORIGIN=https://vendor.petpro.com,https://admin.petpro.com

# Database
DATABASE_URL=postgres://postgres:postgres@postgres:5432/petpro_production
DATABASE_SSL=true

# Redis
REDIS_URL=redis://redis:6379

# Authentication
JWT_SECRET=production-jwt-secret-key-replaceme
JWT_EXPIRES_IN=1d
REFRESH_TOKEN_EXPIRES_IN=7d

# Storage
S3_ENDPOINT=https://s3.amazonaws.com
S3_ACCESS_KEY=your-production-access-key
S3_SECRET_KEY=your-production-secret-key
S3_BUCKET=petpro-uploads-production
S3_REGION=us-east-1

# Logging
LOG_LEVEL=warn

# Email
SMTP_HOST=smtp.mailgun.org
SMTP_PORT=587
SMTP_USER=postmaster@petpro.com
SMTP_PASS=smtp-password-here
EMAIL_FROM=noreply@petpro.com

# Frontend URLs
WEB_VENDOR_URL=https://vendor.petpro.com
WEB_ADMIN_URL=https://admin.petpro.com
MOBILE_APP_URL=https://expo.dev/@petpro/petpro

# Feature Flags
ENABLE_PUSH_NOTIFICATIONS=true
ENABLE_EMAIL_NOTIFICATIONS=true

# Performance
CACHE_TTL=3600
