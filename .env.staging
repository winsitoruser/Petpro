# PetPro Staging Environment Variables

# Environment
NODE_ENV=staging

# Backend API
API_PORT=8080
API_HOST=0.0.0.0
API_URL=https://api-staging.petpro.com
CORS_ORIGIN=https://vendor-staging.petpro.com,https://admin-staging.petpro.com

# Database
DATABASE_URL=postgres://postgres:postgres@postgres:5432/petpro_staging
DATABASE_SSL=true

# Redis
REDIS_URL=redis://redis:6379

# Authentication
JWT_SECRET=staging-jwt-secret-key-replaceme
JWT_EXPIRES_IN=1d
REFRESH_TOKEN_EXPIRES_IN=7d

# Storage
S3_ENDPOINT=https://s3.amazonaws.com
S3_ACCESS_KEY=your-staging-access-key
S3_SECRET_KEY=your-staging-secret-key
S3_BUCKET=petpro-uploads-staging
S3_REGION=us-east-1

# Logging
LOG_LEVEL=info

# Email
SMTP_HOST=smtp.mailgun.org
SMTP_PORT=587
SMTP_USER=postmaster@staging.petpro.com
SMTP_PASS=smtp-password-here
EMAIL_FROM=noreply@staging.petpro.com

# Frontend URLs
WEB_VENDOR_URL=https://vendor-staging.petpro.com
WEB_ADMIN_URL=https://admin-staging.petpro.com
MOBILE_APP_URL=https://expo.dev/@petpro/petpro-staging

# Feature Flags
ENABLE_PUSH_NOTIFICATIONS=true
ENABLE_EMAIL_NOTIFICATIONS=true

# Performance
CACHE_TTL=300
