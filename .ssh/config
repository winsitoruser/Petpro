# PetPro SSH Configuration
# Updated configurations with advanced settings

# Global defaults for all hosts
Host *
    # Security settings
    PasswordAuthentication no
    PubkeyAuthentication yes
    HostKeyAlgorithms ssh-ed25519,rsa-sha2-512,rsa-sha2-256
    KexAlgorithms curve25519-sha256,curve25519-sha256@libssh.org,diffie-hellman-group16-sha512
    MACs hmac-sha2-512-etm@openssh.com,hmac-sha2-256-etm@openssh.com
    Ciphers chacha20-poly1305@openssh.com,aes256-gcm@openssh.com,aes128-gcm@openssh.com
    
    # Connection settings
    ServerAliveInterval 60
    ServerAliveCountMax 3
    ConnectTimeout 10
    ConnectionAttempts 3
    
    # Performance optimizations
    Compression yes
    TCPKeepAlive yes
    ControlMaster auto
    ControlPath ~/.ssh/control/%r@%h:%p
    ControlPersist 1h

# Production Server
Host petpro-production
    HostName your-production-server.com
    User petpro-deploy
    Port 22
    IdentityFile ~/.ssh/petpro_ed25519
    StrictHostKeyChecking accept-new
    LogLevel INFO
    ForwardAgent no
    
# Staging Server
Host petpro-staging
    HostName your-staging-server.com
    User petpro-deploy
    Port 22
    IdentityFile ~/.ssh/petpro_ed25519
    StrictHostKeyChecking accept-new
    LogLevel INFO
    ForwardAgent no
    
# Development Server
Host petpro-development
    HostName your-development-server.com
    User petpro-deploy
    Port 22
    IdentityFile ~/.ssh/petpro_ed25519
    StrictHostKeyChecking accept-new
    LogLevel VERBOSE
    ForwardAgent no
    
# Database Server (for direct database access)
Host petpro-db
    HostName your-db-server.com
    User petpro-db-admin
    Port 22
    IdentityFile ~/.ssh/petpro_ed25519
    StrictHostKeyChecking accept-new
    LocalForward 5432 localhost:5432
    
# Jump Host Configuration (if needed)
Host petpro-jump
    HostName your-jump-host.com
    User jump-user
    Port 22
    IdentityFile ~/.ssh/petpro_ed25519
    StrictHostKeyChecking accept-new
    
# Use Jump Host to access internal servers
Host petpro-internal-*
    ProxyJump petpro-jump
    User petpro-deploy
    IdentityFile ~/.ssh/petpro_ed25519
    
# Naincode Production Server
Host petpro-naincode
    HostName 202.10.36.80
    User root
    Port 22
    IdentityFile ~/.ssh/petpro_ed25519
    StrictHostKeyChecking accept-new
    LogLevel INFO
    ConnectTimeout 30
    ServerAliveInterval 30
    ServerAliveCountMax 3
