# PetPro Environment Variables Example
# Copy this file to .env.development, .env.staging, or .env.production

# Environment
NODE_ENV=development

# Backend API
API_PORT=8080
API_HOST=0.0.0.0
API_URL=http://localhost:8080
CORS_ORIGIN=*

# Database
DATABASE_URL=postgres://postgres:postgres@postgres:5432/petpro
DATABASE_SSL=false
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=petpro
POSTGRES_CONNECTION_LIMIT=100
PGBOUNCER_DEFAULT_POOL_SIZE=50
BACKUP_RETENTION_DAYS=7

# Database Users (for application roles)
PG_APP_USER=petpro_app
PG_APP_PASSWORD=app_password_changeme
PG_READONLY_USER=petpro_readonly
PG_READONLY_PASSWORD=readonly_password_changeme
PG_ADMIN_USER=petpro_admin
PG_ADMIN_PASSWORD=admin_password_changeme

# PgAdmin
PGADMIN_EMAIL=admin@petpro.local
PGADMIN_PASSWORD=pgadminpassword

# Redis
REDIS_URL=redis://redis:6379

# Authentication
JWT_SECRET=your-jwt-secret-key-here
JWT_EXPIRES_IN=1d
REFRESH_TOKEN_EXPIRES_IN=7d

# Storage
S3_ENDPOINT=http://minio:9000
S3_ACCESS_KEY=minio-access-key
S3_SECRET_KEY=minio-secret-key
S3_BUCKET=petpro-uploads
S3_REGION=us-east-1

# Logging
LOG_LEVEL=debug
LOG_TO_ELASTICSEARCH=true
ELASTICSEARCH_HOST=http://elasticsearch:9200
ELASTICSEARCH_USERNAME=petpro_app
ELASTICSEARCH_PASSWORD=app_password_change_me

# Email
SMTP_HOST=mailhog
SMTP_PORT=1025
SMTP_USER=
SMTP_PASS=
EMAIL_FROM=noreply@petpro.com

# Frontend URLs
WEB_VENDOR_URL=http://localhost:3000
WEB_ADMIN_URL=http://localhost:3001
MOBILE_APP_URL=exp://localhost:19000

# Feature Flags
ENABLE_PUSH_NOTIFICATIONS=true
ENABLE_EMAIL_NOTIFICATIONS=true

# ELK Stack Security
ELASTIC_PASSWORD=changeme
KIBANA_PASSWORD=changeme
LOGSTASH_PASSWORD=changeme
KIBANA_ENCRYPTION_KEY=at-least-32-characters-long-secure-key
KIBANA_SMTP_PASSWORD=your-smtp-password

# Performance
CACHE_TTL=3600
