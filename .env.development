# PetPro Development Environment Variables

# Environment
NODE_ENV=development

# Backend API
API_PORT=8080
API_HOST=0.0.0.0
API_URL=http://localhost:8080
CORS_ORIGIN=*

# Database
DATABASE_URL=postgres://postgres:postgres@postgres:5432/petpro
DATABASE_SSL=false

# Redis
REDIS_URL=redis://redis:6379

# Authentication
JWT_SECRET=dev-jwt-secret-key-replaceme
JWT_EXPIRES_IN=1d
REFRESH_TOKEN_EXPIRES_IN=7d

# Storage
S3_ENDPOINT=http://minio:9000
S3_ACCESS_KEY=minio-access-key
S3_SECRET_KEY=minio-secret-key
S3_BUCKET=petpro-uploads-dev
S3_REGION=us-east-1

# Logging
LOG_LEVEL=debug

# Email
SMTP_HOST=mailhog
SMTP_PORT=1025
SMTP_USER=
SMTP_PASS=
EMAIL_FROM=noreply@petpro-dev.com

# Frontend URLs
WEB_VENDOR_URL=http://localhost:3000
WEB_ADMIN_URL=http://localhost:3001
MOBILE_APP_URL=exp://localhost:19000

# Feature Flags
ENABLE_PUSH_NOTIFICATIONS=true
ENABLE_EMAIL_NOTIFICATIONS=true

# Performance
CACHE_TTL=60
